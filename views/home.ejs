<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeContent %></p>
<% posts.forEach(function(post){ %>
<h1><%= post.title %></h1>
<% let xContent = post.content; %>
<% let truncatedContent = xContent.substring(0, 80) + " ..."; %>
<p><%= truncatedContent %><a href="/posts/<%=post.title%>">Read More</a></p>
<% }) %>

<%- include('partials/footer'); -%>
